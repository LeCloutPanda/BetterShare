{
  "manifest_version": 2,
  "name": "Better Share",
  "description": "An extension that just cleans up URLs for embedding and also allows stripping of tracking data.",
  "version": "1.0.2",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "*://*.youtube.com/*",
        "*://*.x.com/*",
        "*://*.instagram.com/*",
        "*://*.tumblr.com/*",
        "*://*.reddit.com/*",
        "*://*.furaffinity.net/*",
        "*://*.bsky.app/*",
        "*://*.tiktok.com/*"
      ]
    }
  ]
}
