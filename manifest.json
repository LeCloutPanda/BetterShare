{
  "manifest_version": 3,
  "name": "Better Share",
  "description": "Basic extension that removes URL tracking and fixes link when sharing content",
  "version": "1.0",
  "permissions": ["clipboardRead", "clipboardWrite", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
      {
        "js": [
          "filter.js",
          "background.js"
        ],
        "matches": [
          "https://*.youtube.com/*",
          "https://*.x.com/*",
          "https://*.instagram.com/*",
          "https://*.tumblr.com/*"
        ]
      }
    ]
}
